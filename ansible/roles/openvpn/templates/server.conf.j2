port {{ openvpn_port }}
proto {{ openvpn_proto }}
dev tun

ca ca.crt
cert server.crt
key server.key
dh none

topology subnet
server {{ openvpn_network }} {{ openvpn_netmask }}

# PUSH ROUTE VPC CHO CLIENT (QUAN TRỌNG NHẤT)
push "route {{ vpc_network }} {{ vpc_netmask }}"

# QUAN TRỌNG NHẤT
client-to-client

keepalive 10 120
cipher AES-256-GCM
persist-key
persist-tun

user nobody
group nogroup

status /var/log/openvpn/status.log
verb 3
